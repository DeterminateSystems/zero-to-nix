---
import HorizontalContainer from "../components/HorizontalContainer.astro";
import Features from "../components/Features.astro";
import Link from "../components/Link.astro";
import VerticalContainer from "../components/VerticalContainer.astro";
import Layout from "../layouts/Layout.astro";
import { md } from "../lib/utils";
import { site } from "../site";
import NixTerms from "../components/NixTerms.astro";
import Signup from "../components/Signup.astro";

const { description, heroButtons } = site;

const descriptionHtml = await md(description);
---

<Layout>
  <section class="bg-dark-gray py-16 md:py-20 lg:py-24">
    <HorizontalContainer>
      <VerticalContainer>
        <div>
          <div
            class="space-y-4 text-left md:space-y-6 md:text-center lg:space-y-8"
          >
            <h1
              class="text-pale text-7xl font-thin tracking-tight md:text-8xl lg:text-9xl"
            >
              Zero to <span class="text-nix-light-blue">Nix</span>
            </h1>
            <h2
              class="text-light-gray text-2xl font-light tracking-tight md:text-3xl lg:text-4xl"
              set:html={descriptionHtml}
            />
          </div>
        </div>

        <div class="text-left md:text-center">
          <ul class="inline-flex items-center space-x-3">
            {
              heroButtons.map(({ text, href, highlight }) => (
                <li>
                  <Link
                    {href}
                    class:list={[
                      "rounded-full tracking-tight transition-colors duration-150 md:text-base lg:text-lg",
                      highlight &&
                        "lg:py-2.4 bg-primary hover:bg-orange px-3.5 py-1.5 font-bold text-white md:px-5 md:py-2 md:text-lg lg:px-6 lg:text-xl",
                      !highlight &&
                        "bg-gray hover:bg-light-gray hover:text-dark px-3 py-1 text-white md:px-3.5 md:py-1.5 lg:px-4.5 lg:py-2",
                    ]}
                  >
                    {text}
                  </Link>
                </li>
              ))
            }
          </ul>
        </div>
      </VerticalContainer>
    </HorizontalContainer>
  </section>

  <HorizontalContainer>
    <section class="my-12 space-y-16">
      <div class="space-y-6">
        <h2
          class="hover:text-gray dark:hover:text-light-gray text-2xl tracking-tight md:text-3xl lg:text-4xl"
          id="features"
        >
          <Link href="#features">What the Nix ecosystem offers</Link>
        </h2>

        <Features />
      </div>
      <div class="space-y-6">
        <h2
          class="hover:text-gray dark:hover:text-light-gray text-2xl tracking-tight md:text-3xl lg:text-4xl"
          id="key-terms"
        >
          <Link href="#key-terms">Core Nix components</Link>
        </h2>

        <NixTerms />
      </div>

      <div class="mt-12">
        <Signup />
      </div>
    </section>
  </HorizontalContainer>
</Layout>
