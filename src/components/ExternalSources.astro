---
import Link from "./Link.astro";
import type { ExternalSource } from "../lib/content";
import Grid3 from "./Grid3.astro";
import HoverableExternalSourceLink from "../components/HoverableExternalSourceLink.astro";

type Props = {
  showTitle?: boolean;
  links: ExternalSource[];
};

const { showTitle = false, links } = Astro.props;
---

<div class:list={["space-y-4", !showTitle && "not-prose remove-underline"]}>
  {
    showTitle && (
      <p
        class="hover:text-gray dark:hover:text-light-gray text-xl font-semibold md:text-2xl lg:text-3xl"
        id="external-sources"
      >
        <Link href="#external-sources">External sources</Link>
      </p>
    )
  }

  <Grid3>
    {
      links.map(({ title, href, source }) => (
        <HoverableExternalSourceLink {title} {href} {source} />
      ))
    }
  </Grid3>
</div>
