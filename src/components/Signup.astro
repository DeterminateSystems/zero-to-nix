---
import SignupModal from "./SignupModal.astro";
---

<div x-cloak x-data="{ modal: false }">
  <div
    class="border-1.5 border-light-gray bg-pale dark:border-gray dark:bg-dark-gray rounded p-4 transition-colors duration-150 md:p-6 lg:p-8"
  >
    <div class="items-center justify-between space-y-4 md:flex md:space-y-0">
      <h1 class="text-lg leading-snug font-light md:text-xl lg:text-2xl">
        Stay up to date with what we're up to at
        <span class="font-semibold">Determinate Systems</span>
      </h1>

      <button
        @click="modal = true"
        class="bg-primary hover:bg-light-gray hover:text-dark rounded px-3 py-1.5 text-xs font-bold text-white transition-colors duration-150 md:px-4 md:py-2 md:text-sm lg:text-base"
      >
        Subscribe
      </button>
    </div>
  </div>

  <SignupModal />
</div>
